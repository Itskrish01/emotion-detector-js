{
  "name": "emotion-detector-js",
  "version": "1.0.2",
  "description": "A simple JavaScript/TypeScript client for the Emotion Tone Analyzer API - works in Node.js and browsers",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:esm && npm run build:cjs && npm run build:types",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:types": "tsc -p tsconfig.types.json",
    "clean": "node -e \"const fs=require('fs');if(fs.existsSync('dist'))fs.rmSync('dist',{recursive:true})\"",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "emotion",
    "sentiment",
    "analysis",
    "nlp",
    "text-analysis",
    "emotion-detection",
    "tone-analyzer",
    "typescript",
    "nodejs",
    "browser"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Itskrish01/emotion-detector-js.git"
  },
  "bugs": {
    "url": "https://github.com/Itskrish01/emotion-detector-js/issues"
  },
  "homepage": "https://text-emotion-detector.netlify.app/",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "typescript": "^5.0.0"
  },
  "sideEffects": false
}
